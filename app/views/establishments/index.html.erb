<div class="wrapper">
  <div class="category-establishment" type="filtre">
    <div class="blue-block-filters">
      <%= link_to "Voir tous", establishments_path %>
      <% @categories.each do |category| %>
          <%= link_to category.capitalize, filter: category %>
      <% end %>
    </div>
  </div>

  <div id="map"
     style="width: 100%; height: 45vh;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

  <div class="container mt-2">
  <% @establishments.each do |establishment| %>
    <div id="establishment-<%= establishment.id %>">
      <%= render 'card_index', establishment: establishment %>
    </div>
  <% end %>

  </div>
</div>
