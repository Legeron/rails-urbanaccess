<%= simple_form_for (establishment),
  wrapper_mappings: {
    boolean:       :custom_boolean,
    check_boxes:   :custom_collection,
    date:          :custom_multi_select,
    datetime:      :custom_multi_select,
    file:          :custom_file,
    radio_buttons: :custom_collection,
    range:         :custom_range,
    time:          :custom_multi_select,
    select:        :custom_multi_select
  } do |f| %>
  <%= f.input :name , input_html: { class: "my-form"} %>
  <%= f.input :address, input_html: { class: "my-form"} %>
  <%= f.input :phone_number , input_html: { class: "my-form"} %>
  <%= f.input :description, input_html: { maxlength: 150, class: "my-form" }  %>
  <%= f.input :category, as: :radio_buttons, collection: %w(restaurant bar cinema theatre), wrapper: :vertical_collection_inline , input_html: { class: "my-form"} %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>

  <%= f.submit 'Modifier', class: "button"%>
<% end %>
