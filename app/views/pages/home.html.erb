<div class="wrapper">
  <div class="blue-block">
    <p>Ton compagnon au quotidien</p>
  </div>

  <div class="home_search-block">
    <form action="">
      <input type="text" placeholder="Où allons nous ?" class="my-form mb-3">
      <input type="text" placeholder="Que voulez vous faire ?" class="my-form mb-3">
      <button class="button mb-4">C'est parti !</button>
    </form>
  </div>

  <div class="activities_options">
    <div class="home-picto">
      <%= link_to establishments_path do %>
      <%= image_tag "picto_loisirs.svg", alt: "Loisirs"%>
      <p>Loisirs</p>
      <% end %>
    </div>
    <div class="home-picto">
      <%= link_to "https://fr.street-co.com/", target: "_blank" do %>
      <%= image_tag "picto_deplacements.svg", alt: "deplacements"%>
      <p>Déplacements</p>
      <% end %>
    </div>
    <div class="home-picto">
      <%= link_to "https://handiplanet.com/", target: "_blank" do %>
      <%= image_tag "picto_voyages.svg", alt: "voyages"%>
      <p>Voyages</p>
      <% end %>
    </div>
    <div class="home-picto">
      <%= link_to "https://www.seloger.com/immobilier/locations/immo-bordeaux-33/", target: "_blank" do %>
      <%= image_tag "picto_logements.svg", alt: "logements"%>
      <p>Logements</p>
      <% end %>
    </div>
    <div class="home-picto">
      <%= link_to "https://parking.handicap.fr/", target: "_blank" do %>
      <%= image_tag "picto_parking.svg", alt: "parking"%>
      <p>Parkings</p>
      <% end %>
    </div>
    <div class="home-picto">
      <%= link_to reports_path do %>
      <%= image_tag "picto_reclamations.svg", alt: "reclamations"%>
      <p>Signaler un pb</p>
      <% end %>
    </div>

  </div>

</div>
